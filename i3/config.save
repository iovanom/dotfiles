    #i3bar_command i3bar
    workspace_buttons yes
    workspace_min_width 30 
    padding 1px 0 1px
    font pango:Noto Sans Mono Bold 9 
    tray_padding 2
    status_command exec python /home/ivan/.config/i3/status.py
    colors {
        background #2F2F2F
        statusline #eeeeee
        separator  #666666
        #                     border  backgr. text
        focused_workspace     #a9a9a9 #5f676a #eeeeee
        active_workspace      #a9a9a9 #5f676a #a9a9a9
        inactive_workspace    #a9a9a9 #2f2f2f #a9a9a9
        urgent_workspace      #a9a9a9 #2f2f2f #FFFFFF
    }
}

